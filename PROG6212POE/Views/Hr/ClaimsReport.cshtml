@model List<PROG6212POE.Models.ViewModels.ClaimInvoiceViewModel>
@{
    ViewData["Title"] = "Approved Claims Report";
}

<h1 class="mb-4">Approved Claims Invoice Report</h1>

@foreach (var report in Model)
{
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">@report.UserName (@report.Role)</h5>
            <div>
                <a asp-action="ViewPdf" asp-route-userName="@report.UserName" class="btn btn-sm btn-outline-primary me-2">
                    View PDF
                </a>
                <a asp-action="DownloadPdf" asp-route-userName="@report.UserName" class="btn btn-sm btn-primary">
                    Download PDF
                </a>
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-bordered table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Hours Worked</th>
                        <th>Hourly Rate</th>
                        <th>Total</th>
                        <th>Notes</th>
                        <th>Date Submitted</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in report.ApprovedClaims)
                    {
                        <tr>
                            <td>@claim.HoursWorked</td>
                            <td>@claim.HourlyRate.ToString("C")</td>
                            <td>@claim.Total.ToString("C")</td>
                            <td>@(string.IsNullOrEmpty(claim.Notes) ? "-" : claim.Notes)</td>
                            <td>@claim.Created.ToString("dd/MM/yyyy")</td>
                        </tr>
                    }
                </tbody>
                <tfoot class="table-light">
                    <tr>
                        <th colspan="2">Total Amount</th>
                        <th colspan="3">@report.TotalAmount.ToString("C")</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
}
