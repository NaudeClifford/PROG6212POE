@model List<PROG6212POE.Models.ViewModels.ClaimInvoiceViewModel>
@{
    Layout = null;
}

<h1>Approved Claims Invoice Report</h1>
<p>Generated on: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>

@foreach (var report in Model)
{
    <h3>@report.UserName (@report.Role)</h3>
    <table border="1" cellpadding="5" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Total</th>
                <th>Notes</th>
                <th>Date Submitted</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in report.ApprovedClaims)
            {
                <tr>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate.ToString("C")</td>
                    <td>@claim.Total.ToString("C")</td>
                    <td>@claim.Notes</td>
                    <td>@claim.Created.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="2">Total</th>
                <th colspan="3">@report.TotalAmount.ToString("C")</th>
            </tr>
        </tfoot>
    </table>
    <br />
}
