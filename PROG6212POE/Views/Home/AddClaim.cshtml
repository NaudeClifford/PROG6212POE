@{
    ViewData["Title"] = "Create Claim";
}

<html>
<head>
    <style>
        body {
            background-color: lavender;
            align-content: center;
            align-items: center;
        }

        h1 {
            font-size: 100px;
            text-align: center;
            background-color: blueviolet;
            color: lavender;
            align-content: center;
            border: 1px solid black;
        }

        h2 {
            font-size: 60px;
            text-align: center;
            background-color: blueviolet;
            color: lavender;
            border: 1px solid black;
            align-content: center;
        }

        h3 {
            font-size: 50px;
            text-align: center;
            background-color: blueviolet;
            color: lavender;
            align-content: center;
            border: 1px solid black;
        }

        label {
            text-align: center;
            background-color: blueviolet;
            color: lavender;
            align-content: center;
            font-size: 30px;
            border: 1px solid black;
            width: 100%;
        }

        input {
            text-align: center;
            background-color: lavender;
            border: 2px solid black;
            color: lavender;
            align-content: center;
        }

            input[type="checkbox"] {
                width: 100px;
                height: 30px;
                accent-color: blueviolet;
                align-content: center;
                border: 1px solid black;
            }

        a {
            color: lavender;
            text-align: center;
        }

        p {
            text-align: center;
            background-color: blueviolet;
            color: lavender;
            align-content: center;
            border: 1px solid black;
        }

        button {
            text-align: center;
            background-color: blueviolet;
            color: lavender;
            border: 2px solid black;
            vertical-align: central;
            font-size: 40px;
            width: 100%;
        }

        div {
            align-content: center;
        }

    </style>

</head>
<body>
    <h1>@ViewData["Title"]</h1>

    <h2>
        Submit new Claim
    </h2>

    <form>
        <div class="row mb-3">
            <label for="userNameInput">Claim Name</label>
            <input type="text" class="form-control" id="userNameInput">
        </div>

        <div class="row mb-3">
            <label for="userNameInput">Claim description</label>
            <input type="text" class="form-control" id="userNameInput">
        </div>

        <div class="row mb-3">
            <h2><i class="fas fa-upload"></i> Upload Document</h2>
        </div>

        <div class="card-body">
            <form>

                <div class="form-group mb-3">
                    <label for="input1">Choose File</label>
                    <input id="input1" type="file" class="form-control" accept=".pdf,.jpg,.jpeg,.png,.doc,.docx" />
                    <div class="form-text">Accepted formats: PDF, JPG, PNG, DOC, DOCX (Max size: 10MB)</div>
                </div>
        
            </form>
        </div>
        <button type="submit">Submit</button>
    </form>

</body>
</html>
