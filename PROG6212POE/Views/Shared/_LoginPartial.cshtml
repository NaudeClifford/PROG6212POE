@using Microsoft.AspNetCore.Identity
@inject SignInManager<PROG6212POE.Models.User> SignInManager
@inject UserManager<PROG6212POE.Models.User> UserManager

<ul class="navbar-nav ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>

        @* Role-based menu items *@
        @if (User.IsInRole("Lecturer"))
        {
            <li class="nav-item">
                <a class="nav-link" asp-controller="Claims" asp-action="Index">My Claims</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Claims" asp-action="Create">New Claim</a>
            </li>
        }
        else if (User.IsInRole("ProgrammeCoordinator"))
        {
            <li class="nav-item">
                <a class="nav-link" asp-controller="Claims" asp-action="PendingForCoordinator">Pending Claims</a>
            </li>
        }
        else if (User.IsInRole("AdcademicManager"))
        {
            <li class="nav-item">
                <a class="nav-link" asp-controller="Claims" asp-action="PendingForManager">Pending Claims</a>
            </li>
        }

        <li class="nav-item">
            <form class="form-inline" asp-area="" asp-controller="Auth" asp-action="Logout" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Login">Login</a>
        </li>
    }
</ul>
