@model List<PROG6212POE.Models.Claim>
@{
    ViewData["Title"] = "Coordinator View";
}

<h2>Pending Claims - Coordinator</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Hours</th>
            <th>Rate</th>
            <th>Notes</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>
                    @(claim.User != null
                                    ? $"{claim.User.FirstName} {claim.User.LastName}"
                                    : "Unknown")
                </td>
                <td>@(claim.Notes ?? "-")</td>  <!-- If you want a separate description, replace here -->
                <td>@claim.HoursWorked.ToString("0.##")</td>
                <td>@claim.HourlyRate.ToString("C")</td>
                <td>@(claim.Notes ?? "-")</td>
                <td>@claim.Created.ToShortDateString()</td>
                <td>
                <a asp-action="Verify" asp-route-id="@claim.Id" class="btn btn-success btn-sm">Verify</a>
                <a asp-action="Reject" asp-route-id="@claim.Id" class="btn btn-danger btn-sm">Reject</a>
                </td>
            </tr>
        }
    </tbody>
</table>
