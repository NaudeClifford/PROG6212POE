@model List<PROG6212POE.Models.Claim>
@{
    ViewData["Title"] = "Manager View";
}

<h2>Verified Claims - Manager</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Hours</th>
            <th>Rate</th>
            <th>Notes</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>
                    @(claim.User != null
                                    ? $"{claim.User.FirstName} {claim.User.LastName}"
                                    : "Unknown")
            </td>
            <td>@(claim.Notes ?? "-")</td>  <!-- Or replace with Description if available -->
            <td>@claim.HoursWorked.ToString("0.##")</td>
            <td>@claim.HourlyRate.ToString("C")</td>
            <td>@(claim.Notes ?? "-")</td>
            <td>@claim.Created.ToShortDateString()</td>
            <td>
                <a asp-action="Approve" asp-route-id="@claim.Id" class="btn btn-primary btn-sm">Approve</a>
                <a asp-action="RejectFromManager" asp-route-id="@claim.Id" class="btn btn-danger btn-sm">Reject</a>
            </td>
        </tr>
                }
    </tbody>
</table>
